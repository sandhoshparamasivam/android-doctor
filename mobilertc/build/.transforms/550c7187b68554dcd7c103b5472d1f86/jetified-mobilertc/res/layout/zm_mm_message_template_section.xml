<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingTop="4dp"
    android:background="@drawable/zm_msg_template_content_bg"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/zm_msg_side_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="12dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/zm_mm_template_side_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/template_section_linear"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:orientation="vertical"
        >
        <com.zipow.videobox.view.mm.MMMessageTemplateItemView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zm_msg_messages">

        </com.zipow.videobox.view.mm.MMMessageTemplateItemView>
        <com.zipow.videobox.view.mm.MMMessageTemplateAttachmentsView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/zm_msg_attachments">
        </com.zipow.videobox.view.mm.MMMessageTemplateAttachmentsView>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:gravity="start|center_vertical"
            android:id="@+id/template_action_bar_linear"
            >
            <TextView android:minWidth="50dp"
                style="@style/UIKitButton.Small"
                android:maxWidth="75dp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/zm_msg_template_action_btn_normal_bg"
                android:id="@+id/template_action_btn1"/>
            <TextView android:layout_width="wrap_content"
                style="@style/UIKitButton.Small"
                android:minWidth="50dp"
                android:maxWidth="75dp"
                android:gravity="center"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/zm_msg_template_action_btn_normal_bg"
                android:id="@+id/template_action_btn2"/>
            <TextView android:layout_width="wrap_content"
                style="@style/UIKitButton.Small"
                android:minWidth="50dp"
                android:maxWidth="75dp"
                android:gravity="center"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:background="@drawable/zm_msg_template_action_btn_normal_bg"
                android:id="@+id/template_action_btn3"/>
            <TextView android:layout_width="wrap_content"
                style="@style/UIKitButton.Small"
                android:minWidth="50dp"
                android:maxWidth="75dp"
                android:textColor="@color/zm_msg_template_action_normal_btn_text_color"
                android:text="@string/zm_mm_template_action_more_40639"
                android:singleLine="true"
                android:drawableRight="@drawable/zm_mm_template_more_arrow"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:background="@drawable/zm_msg_template_action_btn_normal_bg"
                android:id="@+id/template_action_btn_more"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:gravity="start|center_vertical"
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/template_action_unsupport_linear">
            <TextView
                android:id="@+id/template_action_unsupport_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zm_mm_footer_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/zm_mm_footer_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/zm_mm_footer_txt"
                style="@style/UIKitTextView.SecondaryText.Small"
                android:textColor="@color/zm_gray_6C6C7F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/template_section_unsupport_linear"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/template_section_unsupport_text"/>
    </LinearLayout>
</LinearLayout>