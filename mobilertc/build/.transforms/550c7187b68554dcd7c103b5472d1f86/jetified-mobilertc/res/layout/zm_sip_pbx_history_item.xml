<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/zm_sip_phone_call_item_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingLeft="11dp">

    <CheckBox
        android:id="@+id/checkDeleteItem"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/zm_sip_check_state"
        android:button="@null" />

    <ImageView
        android:id="@+id/imgOutCall"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/zm_ic_outgoing_call" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="11dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtBuddyName"
                    style="@style/ZMTextView.BuddyName.Medium.OnLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textStyle="bold"
                    tools:text="Jing" />

                <TextView
                    android:id="@+id/txtCallNo"
                    style="@style/ZMTextView.Small.Dimmed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/zm_ui_kit_color_gray_747487"
                    android:singleLine="true"
                    tools:text="12343124" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/imgRecordingPanel"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCallTime"
                    style="@style/ZMTextView.Small.Dimmed"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/zm_ui_kit_color_gray_747487"
                    android:gravity="right"
                    tools:text="yesterday"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/txtRecording"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:ellipsize="end"
                    android:singleLine="true"
                    tools:text="0:36 Recording"
                    android:textColor="@color/zm_ui_kit_color_blue_0E71EB"
                    android:textSize="15sp"
                    android:maxLines="1"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/showDialog"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/zm_sip_accessbility_detail_61381"
                android:layout_marginRight="6dp"
                android:scaleType="centerInside"
                android:src="@drawable/zm_sip_history_list_more_action"/>
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:src="@drawable/zm_sip_horizontal_line" />
    </LinearLayout>

</LinearLayout>