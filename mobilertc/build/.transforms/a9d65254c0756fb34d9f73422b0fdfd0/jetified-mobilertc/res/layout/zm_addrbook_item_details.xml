                </LinearLayout>


                <TextView
                    android:id="@+id/txtScreenSubName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
