<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/hor_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageview_poster"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/patient"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lable_bullet"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="top"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_common_query"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="F"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:text="Mr. M.MOHAN RAJ"
                    android:textColor="@color/grey_900"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_pat_geo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="2"
                    android:text="Coimbatore, India"
                    android:textColor="@color/grey_900"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/tv_plan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:text="3 months plan (Expired on: 30.Nov.2016)"
                    android:textColor="@color/red_800"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-thin"
                    android:maxLines="2"
                    android:text="Paediatric Dentistry, Dentistry, Periodontist, Endodontist"
                    android:textColor="@color/red_800"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="34dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/right_new" />

    </RelativeLayout>

</FrameLayout>