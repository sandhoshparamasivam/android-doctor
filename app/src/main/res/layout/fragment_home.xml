                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-light"
                            android:maxLines="1"
                            android:text="Analytics"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                    </LinearLayout>

