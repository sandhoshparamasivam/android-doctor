                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center_vertical"
                                android:text="My Patients"
                                android:textColor="@color/mds_bluegrey_700"
                                android:textSize="17dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="25dp"
                                android:fontFamily="sans-serif"
                                android:text="Manage our patients &amp; their appoinments"
                                android:textColor="@color/mds_bluegrey_700"
                                android:textSize="13dp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/right"
                                android:tint="@color/black" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="0dp"
                            android:background="@color/app_color" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/home_row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="55dp"
                            android:layout_height="match_parent"
                            android:background="@color/app_color"
                            android:padding="5dp">

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="5dp"
                                android:src="@mipmap/myqa_icon"
                                android:tint="@color/white" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_wallet_tit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center_vertical"
                                android:text="My Clinics"
                                android:textColor="@color/mds_bluegrey_700"
                                android:textSize="17dp" />

                            <TextView
                                android:id="@+id/tv_wallet_desc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:layout_marginRight="25dp"
                                android:fontFamily="sans-serif"
                                android:text="Add your clinic address for direct visit consultations"
                                android:textColor="@color/mds_bluegrey_700"
                                android:textSize="13dp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/right"
                                android:tint="@color/black" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="0dp"
                            android:background="@color/app_color" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

