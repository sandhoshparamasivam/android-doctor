<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/attached_file_list_bg"
        android:elevation="2dp"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/file_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/logo1"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/layout_file_open"
            android:autoLink="none"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:linksClickable="true"
            android:maxLines="2"
            android:text="Does anxiety cause hand tremor and shoulder pain?"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/layout_file_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/layout_file_down"
            android:background="@drawable/layout_rounded_corner"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/view_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="View"
                android:textColor="@color/mds_bluegrey_800"
                android:textSize="15sp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_file_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/layout_rounded_corner"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/download_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:text="Download"
                android:textColor="@color/mds_bluegrey_800"
                android:textSize="15sp"
                android:visibility="gone" />

        </LinearLayout>




        <TextView
            android:id="@+id/tv_ext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:text=""
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="23dp"
            android:layout_toEndOf="@+id/file_image"
            android:layout_toRightOf="@+id/file_image"
            android:layout_weight="2"
            android:autoLink="none"
            android:fontFamily="sans-serif-light"
            android:linksClickable="true"
            android:text="Does anxiety cause hand tremor and shoulder pain?"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="23dp"
            android:layout_toEndOf="@+id/file_image"
            android:layout_toRightOf="@+id/file_image"
            android:layout_weight="2"
            android:autoLink="none"
            android:fontFamily="sans-serif-light"
            android:linksClickable="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="gone" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/close"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>