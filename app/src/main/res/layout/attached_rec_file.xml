<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/attached_file_list_bg"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/file_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:src="@mipmap/logo1" />

        <TextView
            android:id="@+id/tv_filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="23dp"
            android:layout_toEndOf="@+id/file_image"
            android:layout_toRightOf="@+id/file_image"
            android:layout_weight="2"
            android:autoLink="none"
            android:onClick="onClick_file"
            android:fontFamily="sans-serif-light"
            android:linksClickable="true"
            android:text="Does anxiety cause hand tremor and shoulder pain?"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_ext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="23dp"
            android:layout_toEndOf="@+id/file_image"
            android:layout_toRightOf="@+id/file_image"
            android:layout_weight="2"
            android:autoLink="none"
            android:fontFamily="sans-serif-light"
            android:linksClickable="true"
            android:text="Does anxiety cause hand tremor and shoulder pain?"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="23dp"
            android:layout_toEndOf="@+id/file_image"
            android:layout_toRightOf="@+id/file_image"
            android:layout_weight="2"
            android:autoLink="none"
            android:visibility="gone"
            android:fontFamily="sans-serif-light"
            android:linksClickable="true"
            android:text="Does anxiety cause hand tremor and shoulder pain?"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="23dp"
            android:layout_toEndOf="@+id/file_image"
            android:layout_toRightOf="@+id/file_image"
            android:layout_weight="2"
            android:autoLink="none"
            android:visibility="gone"
            android:fontFamily="sans-serif-light"
            android:linksClickable="true"
            android:text="Does anxiety cause hand tremor and shoulder pain?"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_furl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="23dp"
            android:layout_toEndOf="@+id/file_image"
            android:layout_toRightOf="@+id/file_image"
            android:layout_weight="2"
            android:autoLink="none"
            android:visibility="gone"
            android:fontFamily="sans-serif-light"
            android:linksClickable="true"
            android:text="Does anxiety cause hand tremor and shoulder pain?"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@mipmap/close"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/grey_300"
        android:visibility="gone" />

</LinearLayout>