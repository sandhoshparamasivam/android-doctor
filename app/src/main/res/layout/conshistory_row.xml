<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/list_logo"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/video_cons_ico_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rightarrow"
            android:layout_toRightOf="@+id/list_logo"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:id="@+id/tvnotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:text="Heart is the vital pumping organ of the body ... Heart attack is irreversible death of heart tissue, which occurs when the oxygen supply"
                android:textColor="@color/mds_bluegrey_900"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvpatient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="sans-serif"
                android:text="Sidharth parthiban"
                android:textColor="@color/mds_bluegrey_700"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="right"
                android:text="date"
                android:textColor="@color/grey_600"
                android:textSize="12sp"
                android:visibility="gone" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tvstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/layout_border_red"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="4dp"
                    android:text="Active"
                    android:textColor="@color/mds_bluegrey_900"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvapptype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Active"
                    android:textColor="@color/mds_bluegrey_900"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/tvapptdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="sans-serif"
                    android:text="18.Auf.2016, 07.00 AM"
                    android:textColor="@color/mds_bluegrey_600"
                    android:textSize="14sp" />

            </RelativeLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/rightarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/right"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>